.side_bar
  .side_bar__user-name
    .top-items
      .top-items__name
        = current_user.name
      %ul.top-items__icons
        %li
        = link_to new_group_path, class: "top-items__icons__edit_icon" do
          = icon('fas', 'users')          
        %li
        = link_to edit_user_path(current_user), class: "top-items__icons__cog_icon" do
          = icon('fas', 'user')


  .side_bar__list
    - current_user.groups.each do |group|
      .side_bar__list__group
        = link_to group_messages_path(group) do
          .side_bar__list__group__name
            = group.name
          .side_bar__list__group__message
            = group.show_last_message